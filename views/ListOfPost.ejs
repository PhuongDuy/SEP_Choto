<%- include ./partials/header1 %>
  <!-- page content -->
  <div class="right_col" role="main">
    <div class="">
      <div class="page-title">
        <div class="title_left">
          <h3>Admin
            <small>Chào bạn đến với trang quản trị</small>
          </h3>
        </div>

        <div class="title_right">
          <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">Go!</button>
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="clearfix"></div>

      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="x_panel">
            <div class="x_title">
              <h2>Danh sách các bài đăng
                <small>Người bán hàng</small>
              </h2>
              <ul class="nav navbar-right panel_toolbox">
                <li>
                  <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                  </a>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                    <i class="fa fa-wrench"></i>
                  </a>
                  <ul class="dropdown-menu" role="menu">
                    <li>
                      <a href="#">Settings 1</a>
                    </li>
                    <li>
                      <a href="#">Settings 2</a>
                    </li>
                  </ul>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
              <table id="datatable" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>Ngày tạo</th>
                    <th>Tên bài đăng</th>
                    <th>Loại</th>
                    <th>Giá</th>
                    <th>Trạng thái</th>
                    <th>Công cụ</th>
                  </tr>
                </thead>
                <tbody>
                  <% listpost.forEach(function(posts,i,_arr){%>
                    <tr>
                      <th>
                        <%= posts.Create_at.toLocaleDateString()%>
                      </th>
                      <th>
                        <%= posts.ProductName%>
                      </th>
                      <th>
                        <%= tpy[i] %>
                      </th>
                      <th>
                        <%= posts.Price%>
                      </th>
                      <th>
                          <% if(posts.PostStatus_ID === "PS01") {%>
                            <a  id="btn1" data-id="<%= posts._id%>" data-status="PS01" type="button" class="btn btn-success Hienthi">Hiển thị</a>
                          <% } else {%>
                            <a id="btn2" data-id="<%= posts._id%>" data-status="PS02" type="button" class="btn btn-danger An">Ẩn</a>
                          <% } %>
                      </th>
                      <th>
                        <a type="button" class="btn btn-warning" href="../ViewDetailOSP/<%= posts._id%>">Xem chi tiết</a>
                      </th>
                    </tr>
                    <%});%>
                      <!-- <input type="text" name=""> -->


                </tbody>

              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /page content -->

  <%- include ./partials/footer1 %>