<!DOCTYPE HTML>

<html>
<header>
    <%- include('partials/header')%>
</header>

<body>
    <div class="container">
        <form action="/edit-san-pham" method="POST">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 grid">
                <nav class="navbar navbar-default" role="navigation" style="border: 1px solid;margin : 0;background-color: #2A3F54">
                    <div class="container-fluid">
                        <p style="margin-bottom: 0;color: white;font-size: 20px">Thông tin bài đăng</p>
                    </div>
                </nav>
                <div style="border: 1px solid;">
                    <div style="padding: 10px;">
                        <div class="input-group">
                            <span class="input-group-addon">ID :</span>
                            <input type="text" class="form-control" name="ID" value="<%= lipost.ID%>">

                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Product Name :</span>
                            <input type="text" class="form-control" name="ProductName" value="<%= lipost.ProductName%>">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Price :</span>
                            <input type="text" class="form-control" name="Price" value="<%= lipost.Price%>">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Discription :</span>
                            <textarea type="text" class="form-control" name="Discription"><%= lipost.Discription%></textarea>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Create At :</span>
                            <input type="text" class="form-control" name="Create_at" value="<%= lipost.Create_at%>">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Product Type :</span>
                            <input type="text" class="form-control" name="ProductType_ID" value="<%= lipost.ProductType_ID%>">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Status :</span>
                            <input type="text" class="form-control" name="PostStatus_ID" value="<%= lipost.PostStatus_ID%>">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 grid">
                <nav class="navbar navbar-default" role="navigation" style="border: 1px solid;margin : 0;background-color: #2A3F54">
                    <div class="container-fluid">
                        <p style="margin-bottom: 0;color: white;font-size: 20px">Hình ảnh bài đăng</p>
                    </div>
                </nav>
                <div style="border: 1px solid;">
                    <div style="padding: 10px;">
                        <div class="input-group">
                            <span class="input-group-addon">Avatar :</span>
                            <input type="file" name="file">
                            <img style="width: 50px;height: 50px;" src="../frontend/images/<%= lipost.Avatar%>">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Images :</span>
                            <% img.forEach(function(item){%>
                            <img style="width: 50px;height: 50px;" src="../frontend/images/<%= item%>">
                            <%})%>
                        </div>
                    </div>
                </div>
                <br>
                <a href="/postofuser"><input type="button" class="btn btn-danger" type="submit" value="Quay lại"></a>
                <a href="#"><input type="button" class="btn btn-success" type="submit" value="Lưu" name="Luu"></a>
            </div>
        </form>
    </div>

</body>

<footer>
    <%- include('partials/footer') %>
</footer>

</html>